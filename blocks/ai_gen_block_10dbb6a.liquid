{% doc %}
  @prompt
    I want something similar to the Image Banner, but being able to put an video instead of an image on the background
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height }}px;
    overflow: hidden;
    display: flex;
    align-items: {{ block.settings.content_alignment }};
    justify-content: center;
    color: {{ block.settings.text_color }};
  }

  .ai-video-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-video-banner-video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-video-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-video-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px 20px;
  }

  .ai-video-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-video-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 24px;
    line-height: 1.4;
    opacity: 0.9;
  }

  .ai-video-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-video-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  .ai-video-banner-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    right: 20px;
    z-index: 4;
    display: flex;
    gap: 10px;
  }

  .ai-video-banner-control-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-video-banner-control-button-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
    transform: scale(1.1);
  }

  .ai-video-banner-control-button-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    fill: #333;
  }

  @media screen and (max-width: 749px) {
    .ai-video-banner-{{ ai_gen_id }} {
      height: {{ block.settings.banner_height | times: 0.7 }}px;
    }

    .ai-video-banner-content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }

    .ai-video-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-video-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-video-banner-controls-{{ ai_gen_id }} {
      bottom: 10px;
      right: 10px;
    }

    .ai-video-banner-control-button-{{ ai_gen_id }} {
      width: 35px;
      height: 35px;
    }
  }
{% endstyle %}

<video-banner-{{ ai_gen_id }}
  class="ai-video-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-video-banner-background-{{ ai_gen_id }}">
    {% if block.settings.video %}
      <video
        class="ai-video-banner-video-{{ ai_gen_id }}"
        {% if block.settings.autoplay %}autoplay{% endif %}
        {% if block.settings.loop %}loop{% endif %}
        {% if block.settings.muted %}muted{% endif %}
        playsinline
        preload="metadata"
      >
        <source src="{{ block.settings.video }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {% else %}
      <div class="ai-video-banner-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-video-banner-empty-state-{{ ai_gen_id }}">
          Next, add a video
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-video-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-video-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-banner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-video-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-video-banner-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% if block.settings.video and block.settings.show_controls %}
    <div class="ai-video-banner-controls-{{ ai_gen_id }}">
      <button
        class="ai-video-banner-control-button-{{ ai_gen_id }} ai-video-banner-play-pause-{{ ai_gen_id }}"
        aria-label="Play/Pause video"
      >
        <svg class="ai-video-banner-play-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
          <path d="M8 5v14l11-7z"/>
        </svg>
        <svg class="ai-video-banner-pause-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" style="display: none;">
          <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
        </svg>
      </button>

      <button
        class="ai-video-banner-control-button-{{ ai_gen_id }} ai-video-banner-mute-{{ ai_gen_id }}"
        aria-label="Mute/Unmute video"
      >
        <svg class="ai-video-banner-sound-icon-{{ ai_gen_id }}" viewBox="0 0 24 24">
          <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02zM14 3.23v2.06c2.89.86 5 3.54 5 6.71s-2.11 5.85-5 6.71v2.06c4.01-.91 7-4.49 7-8.77s-2.99-7.86-7-8.77z"/>
        </svg>
        <svg class="ai-video-banner-mute-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" style="display: none;">
          <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
        </svg>
      </button>
    </div>
  {% endif %}
</video-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class VideoBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.video = this.querySelector('.ai-video-banner-video-{{ ai_gen_id }}');
        this.playPauseBtn = this.querySelector('.ai-video-banner-play-pause-{{ ai_gen_id }}');
        this.muteBtn = this.querySelector('.ai-video-banner-mute-{{ ai_gen_id }}');
        this.playIcon = this.querySelector('.ai-video-banner-play-icon-{{ ai_gen_id }}');
        this.pauseIcon = this.querySelector('.ai-video-banner-pause-icon-{{ ai_gen_id }}');
        this.soundIcon = this.querySelector('.ai-video-banner-sound-icon-{{ ai_gen_id }}');
        this.muteIcon = this.querySelector('.ai-video-banner-mute-icon-{{ ai_gen_id }}');

        if (this.video) {
          this.setupEventListeners();
          this.updatePlayPauseIcon();
          this.updateMuteIcon();
        }
      }

      setupEventListeners() {
        if (this.playPauseBtn) {
          this.playPauseBtn.addEventListener('click', () => {
            if (this.video.paused) {
              this.video.play();
            } else {
              this.video.pause();
            }
          });
        }

        if (this.muteBtn) {
          this.muteBtn.addEventListener('click', () => {
            this.video.muted = !this.video.muted;
            this.updateMuteIcon();
          });
        }

        this.video.addEventListener('play', () => {
          this.updatePlayPauseIcon();
        });

        this.video.addEventListener('pause', () => {
          this.updatePlayPauseIcon();
        });

        this.video.addEventListener('volumechange', () => {
          this.updateMuteIcon();
        });
      }

      updatePlayPauseIcon() {
        if (this.video.paused) {
          this.playIcon.style.display = 'block';
          this.pauseIcon.style.display = 'none';
        } else {
          this.playIcon.style.display = 'none';
          this.pauseIcon.style.display = 'block';
        }
      }

      updateMuteIcon() {
        if (this.video.muted) {
          this.soundIcon.style.display = 'none';
          this.muteIcon.style.display = 'block';
        } else {
          this.soundIcon.style.display = 'block';
          this.muteIcon.style.display = 'none';
        }
      }
    }

    customElements.define('video-banner-{{ ai_gen_id }}', VideoBanner{{ ai_gen_id }});
  })();
</script>

